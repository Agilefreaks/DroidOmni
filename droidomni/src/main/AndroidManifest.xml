<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.omnipaste.droidomni" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <permission
        android:name="com.omnipaste.droidomni.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.omnipaste.droidomni.C2D_MESSAGE" />

    <application
        android:name="com.omnipaste.droidomni.DroidOmniApplication_"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.omnipaste.droidomni.activities.MainActivity_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.omnipaste.droidomni.activities.OmniActivity_"
            android:label="@string/app_name" >
        </activity>
        <activity
                android:name="com.omnipaste.droidomni.activities.AboutActivity_"
                android:label="@string/title_activity_about"
                android:parentActivityName=".activities.OmniActivity_">
        </activity>

        <service
            android:name="com.omnipaste.droidomni.services.OmniService_"
            android:exported="false" />

        <receiver
            android:name="com.omnipaste.droidomni.gcm.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.omnipasteapp.omnipaste" />
            </intent-filter>
        </receiver>

        <service android:name="com.omnipaste.droidomni.gcm.GcmIntentService_" />
    </application>

</manifest>
