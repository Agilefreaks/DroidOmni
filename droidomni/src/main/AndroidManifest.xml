<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.omnipaste.droidomni"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:name="com.omnipaste.droidomni.DroidOmniApplication_"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:supportsRtl="true">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name="com.omnipaste.droidomni.ui.activity.LauncherActivity_"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.ConnectingActivity_"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".ui.activity.LoginActivity_"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".ui.activity.ErrorActivity_"
            android:label="@string/app_name"
            android:parentActivityName="com.omnipaste.droidomni.ui.activity.LauncherActivity_">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activity.ConnectingActivity_"/>
        </activity>

        <activity
            android:name=".ui.activity.OmniActivity_"
            android:launchMode="singleTop"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.omnipaste.droidomni.ui.activity.AboutActivity_"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.omnipaste.droidomni.ui.activity.OmniActivity_">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.omnipaste.droidomni.ui.activity.OmniActivity_"/>
        </activity>

        <activity
            android:name="com.omnipaste.droidomni.ui.activity.SettingsActivity_"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.omnipaste.droidomni.ui.activity.OmniActivity_">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.omnipaste.droidomni.ui.activity.OmniActivity_"/>
        </activity>

        <service
            android:name="com.omnipaste.droidomni.service.OmniService_"
            android:description="@string/service_description"
            android:exported="false"
            android:icon="@drawable/ic_stat_omni"/>

        <receiver
            android:name="com.omnipaste.droidomni.gcm.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION"/>

                <category android:name="com.omnipasteapp.omnipaste"/>
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.omnipaste.droidomni.service.smartaction.SmartActionRemove"
            android:enabled="true"
            android:exported="false"/>

        <service
            android:name="com.omnipaste.droidomni.gcm.GcmIntentService_"
            android:exported="false"/>
    </application>

</manifest>
