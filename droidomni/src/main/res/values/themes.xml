<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="OmniActionBar">
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

    <style name="Widget.ListView.NavDrawer" parent="@android:style/Widget.ListView.Menu">
        <item name="android:divider">@null</item>
    </style>

    <style name="NavLinearLayout" parent="AppTheme">
        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="NavLinearItem" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
    </style>

    <style name="NavLinearItemPrimary" parent="NavLinearItem">
        <item name="android:drawablePadding">@dimen/margin_left</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    </style>

    <style name="NavLinearItemSecondary" parent="NavLinearItem">
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>

    <style name="Widget.Holo.ActionImageButton" parent="@android:style/Widget.Holo.ImageButton">
        <item name="android:background">@drawable/btn_smart_action</item>
    </style>
</resources>
