<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->

        <!-- List attributes -->
        <item name="listPreferredItemPaddingStart">@dimen/listPreferredItemPaddingStart</item>
        <item name="listPreferredItemPaddingEnd">@dimen/listPreferredItemPaddingEnd</item>
        <item name="drawablePadding">@dimen/drawablePadding</item>

        <!-- Actionbar styles -->
        <item name="android:actionBarStyle">@style/OmniActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark_am</item>
    </style>

    <style name="OmniActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse</item>
        <item name="android:subtitleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle.Inverse</item>
        <item name="android:background">@drawable/ab_solid_dark_holo</item>
    </style>

    <style name="Widget.ListView.NavDrawer" parent="@android:style/Widget.ListView.Menu">
        <item name="android:divider">@null</item>
    </style>

    <style name="NavLinearLayout" parent="AppTheme">
        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="Widget.Holo.ActionImageButton" parent="@android:style/Widget.Holo.ImageButton">
        <item name="android:background">@drawable/btn_smart_action</item>
    </style>
</resources>
