<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.omnipasteapp.omnipaste"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="17"/>

    <uses-permission android:name="android.permission.GET_CLIPS"/>
    <uses-permission android:name="android.permission.READ_CLIPS"/>
    <uses-permission android:name="android.permission.WRITE_CLIPS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name=".LoginActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:parentActivityName="com.omnipasteapp.omni.LoginActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.omnipasteapp.omni.LoginActivity"
                    />
        </activity>

        <service android:name="com.omnipasteapp.omnipaste.core.ClipboardService">
        </service>

        <receiver android:name=".ClipboardServiceCommandReceiver"/>
    </application>

</manifest>